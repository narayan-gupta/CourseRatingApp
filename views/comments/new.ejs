<% include ../partials/header.ejs %>

<div class = 'container'>
    <div class = 'row'>
       <h1 style ="text-align: center">Add New Comment to <%= course.name %></h1>
       <div style = 'width: 30%; margin: 25px auto;'>
            <form action ='/courses/<%=course._id%>/comments' method = 'POST' >
                <div class = 'form-group'>
                    <input class = 'form-control' type = 'text' name= "text" placeholder = "text">
                </div>
                <div class = 'form-group'>
                    <input class = 'form-control' type = 'text' name = 'author' placeholder = 'author'>
                </div>
                <div class = 'form-group'>
                     <button class = 'btn btn-lg btn-default btn-block btn-primary'>Submit</button>
                </div>
            </form>
            <a href = '/courses'>View Courses</a> 
        </div>
    </div>
    
</div>
