
 <% include ../partials/header.ejs %>
        
 
    <div class = 'container'>
        <header class = 'jumbotron'>
            <div class = 'container'>
                <h1> Welcome to CourseYelp </h1>
                <p>Learn about what you want to learn</p>
                <button class = 'btn btn-primary btn-large'>
                    <p>
                        <a href = '/courses/new'> Add New Course </a>
                    </p>
                </button>
            </div>
        </header>
        
        <div class = 'col-lg-12'>
                <h3>Our Most Popular Classes</h3>
        </div>
        
        <div class ='row text-center' style = 'display:flex; flex-wrap: wrap;'>
            <% classes.forEach(function(course){ %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                   <img src = <%= course.img %>> 
                </div>
                <div class = 'caption'>
                   <h4> <%= course.name %> </h4>
                </div>
                <p>
                    <a href = "/courses/<%= course._id %>", class = "btn btn-primary"> More Info </a>
                </p>
            </div>
            <% }) %>
        </div>
        
    </div>
<% include ../partials/header.ejs %>


